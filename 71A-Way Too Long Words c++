#include <iostream>
#include <string>
using namespace std ;
 
int main ()
{
	int count ;
 
	cin>> count ;
	string name; 
	for(int i=0;i<count;i++)
   {
		cin>>name;
		if(name.length()>10)
        {
			cout<<name[0]<<name.length()-2<<name[name.length()-1]<<endl;
        }
		else
		{
			cout<<name<<endl;
		}
 
 
 
  }
 
 
 
 
	system("pasue");
 
 
	return 0;
}
