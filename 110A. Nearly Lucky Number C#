using System;

namespace ProblemSolveingRound
{
    internal class Program
    {
        static void Main(string[] args)
        {
            var num = Console.ReadLine();
            int count = 0;
            for (int i = 0; i < num.Length; i++)
            {
                if (num[i] == '7' || num[i] == '4')
                {
                   count++;
                }
          


            }
            if (count==4||count==7)
            {
                Console.WriteLine("YES");
            }
            else 
            {
                Console.WriteLine("NO");
            }
            
            
            


        }
    }
}
